<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demoapplication">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DemoApplication">

        <!-- Notification Activity -->
        <activity
            android:name=".NotificationActivity"
            android:exported="true" />

        <activity
            android:name=".NotificationActivity2"
            android:exported="false" />

        <!-- EventFeedback Activity -->
        <activity
			android:name=".EventFeedbackActivity"
            android:exported="true" />
		
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Student Activity -->
        <activity
            android:name=".StudentActivity"
            android:label="@string/student_activity_title">
        </activity>

        <!-- Student New Complaint Activity -->
        <activity
            android:name=".StudentNewComplaintActivity"
            android:label="@string/student_new_complaint_activity_title">
        </activity>

        <!-- Register Activity -->
        <activity android:name=".RegisterActivity" />

        <!-- Complaint Activity -->
        <activity android:name=".ComplaintActivity" />

        <!-- Admin Login Activity -->
        

        <!-- Create Event Activity -->
        <activity
            android:name=".CreateEventActivity"
            android:label="Create Event">
        </activity>

        <!-- Admin Home Activity -->
        <activity android:name=".AdminHomeActivity" />

        <!-- Post Activity -->
        <activity
            android:name=".PostActivity">
        </activity>

        <!-- Events Activity -->
        <activity
            android:name=".EventsActivity"
            android:label="@string/student_events_activity_title">
        </activity>

        <!-- Admin Announcement Activity -->
        <activity
            android:name=".WriteAnnouncementActivity"
            android:label="Write Activity">
        </activity>

    </application>

</manifest>