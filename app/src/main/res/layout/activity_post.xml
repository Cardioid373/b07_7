<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <Button
        android:id="@+id/CSMajorButton"
        android:layout_width="201dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="160dp"
        android:text="CS Major/Specialist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CSMinorButton"
        android:layout_width="204dp"
        android:layout_height="52dp"
        android:layout_marginBottom="160dp"
        android:text="CS Minor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/MathMajorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Math Major"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/MathMinorButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MathMinorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Math Minor"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/MathMajorButton" />

    <Button
        android:id="@+id/StatisticsMajorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Statistics Major"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/StatsMinorButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/StatsMinorButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Statistics Minor"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/StatisticsMajorButton" />

    <Button
        android:id="@+id/button10"
        android:layout_width="404dp"
        android:layout_height="64dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
